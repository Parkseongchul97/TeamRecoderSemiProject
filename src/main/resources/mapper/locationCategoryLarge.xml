<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.locationCategoryLargeMapper">

	<resultMap id="LocationCategory" type="LocationCategoryLarge">
		<id column="loc_la_code" property="locLargeCode"/>
		<result column="loc_la_name" property="locLargeName"/>
	</resultMap>

	<select id="LocationCategoryLarge" parameterType="String" resultMap="String">
		SELECT * FROM location_category_large
		join location_category_small using (loc_la_code)
		WHERE loc_la_code = #{locLargeCode}
	</select>
	
	<select id="allLocation" resultMap="LocationCategory">
		SELECT * FROM location_category_large
	</select>
</mapper>